#require_relative "../models/agenda.rb"

class AltaUsuarioController < ApplicationController
 
  def alta
    @agen = Agenda.new
    @agen.alta params[:nombre],params[:apellidos],params[:edad],params[:telefono]
    render "index"
  end
  
  def index
    
    animal = Animal.new
    if @agen
       if params[:nombre] !=nil
         @agen.alta params[:nombre],params[:apellidos],params[:edad],params[:telefono]
       end
    else
     puts "Llegamos aqui"
     @agen = Agenda.new
    end
    @listausuarios= @agen.lista
  end
  
end
